<div class="container index-body">
    <div class="row">
        <div class="col-lg-12 col-md-10 col-sm-8 col-xs-6">
            <img class="img-responsive box-shadow" src="~/Content/Images/background.jpg" id="homeBackground" />

            <div class="index-body-btns col-lg-4 col-md-4 col-sm-4 col-xs-4">
                <a type="button" class="btn-toys" href="@Url.Action("SetSectionTutoPic", "Pictures", new  {id="paper"})" role="button">
                    <img class="col-lg-12 col-md-12 col-sm-12 col-xs-12 img-responsive grow" src="~/Content/Images/paper.png" />
                </a>
                <a type="button" class="btn-toys" href="@Url.Action("SetSectionTutoPic", "Pictures", new  {id="cardboard"})" role="button">
                    <img class="col-lg-12 col-md-12 col-sm-12 col-xs-12 img-responsive grow" src="~/Content/Images/cardboard.png" />
                </a>
                <div class="clearfix visible"></div>
                <a type="button" class="btn-toys" href="@Url.Action("SetSectionTutoPic", "Pictures", new  {id="naturalmaterial"})" role="button">
                    <img class="col-lg-12 col-md-12 col-sm-12 col-xs-12 img-responsive grow" src="~/Content/Images/naturalmaterial.png" />
                </a>
                <a type="button" class="btn-toys" href="@Url.Action("SetSectionTutoPic", "Pictures", new  {id="printables"})" role="button">
                    <img class="col-lg-12 col-md-12 col-sm-12 col-xs-12 img-responsive grow" src="~/Content/Images/printables.png" />
                </a>
            </div>
            <a type="button" class="col-lg-3 col-md-3 col-sm-3 col-xs-3 btn-rewards" href="@Url.Action("Rewards", "Home", new  {id="rewards"})" role="button">
                <img class="img-responsive" src="~/Content/Images/rewards.png" />
            </a>

            <div class="sub-menu col-lg-12 col-md-12 col-sm-12 col-xs-12">
                @Html.ActionLink("Начало", "Index", "Home")
                @Html.ActionLink("Галерия", "Gallery", "Home")
                @Html.ActionLink("Награди", "Rewards", "Home")
                @Html.ActionLink("Печеливши", "Winners", "Home")
                @Html.ActionLink("Правила", "Rules", "Home")
            </div>
        </div>
    </div>
</div>
