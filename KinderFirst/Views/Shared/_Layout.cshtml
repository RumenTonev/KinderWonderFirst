<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Share Imagination</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/toast")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="navbar-btn-custom">@Html.ActionLink("Начало", "Index", "Home")</li>
                    <li class="navbar-btn-custom">@Html.ActionLink("Участвай", "PlayNow", "Home")</li>
                    <li class="dropdown navbar-btn-custom">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Уроци</a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("SetSectionTutoPic", "Sections", new  {id="paper"})">Хартия</a></li>
                            <li><a href="@Url.Action("SetSectionTutoPic", "Sections", new  {id="naturalmaterial"})">Подръчни материали</a></li>
                            <li><a href="@Url.Action("SetSectionTutoPic", "Sections", new  {id="cardboard"})">Картон</a></li>
                            <li><a href="@Url.Action("Index", "Printables", new  {id="printables"})">Шаблони</a></li>
                        </ul>
                    </li>
                    <li class="navbar-btn-custom">@Html.ActionLink("Галерия", "Index", "Gallery")</li>
                    <li class="navbar-btn-custom">@Html.ActionLink("Награди", "Rewards", "Home")</li>
                    <li class="navbar-btn-custom">@Html.ActionLink("Печеливши", "Winners", "Home")</li>
                    <li class="navbar-btn-custom">@Html.ActionLink("Правила", "Rules", "Home")</li>
                    <li class="navbar-btn-custom">@Html.ActionLink("Админ", "Index", "AdminUpload")</li>
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 container body-content">
        @RenderBody()
    </div>
    <footer class="wave-div">
        @*<div class="footer-text">&copy; @DateTime.Now.Year - Kinder Milch-Schnitte</div>*@
        <div class="sub-menu col-lg-12 col-md-12 col-sm-12 col-xs-12">
            @*@Html.ActionLink("Правила за употреба", "SiteTermsOfUse", null, new { target = "_blank" })*@
            <span class="footer-text">copyright © @DateTime.Now.Year - Kinder Milch-Schnitte</span>
            <a href="" onclick="touPopup()">Правила за употреба</a>
            <a href="" onclick="reqPopup()">Технически изисквания</a>
            <a href="" onclick="contactPopup()">Контакти</a>
        </div>
    </footer>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


    <script>
        $(function () {
            // Initialize numeric spinner input boxes
            //$(".numeric-spinner").spinedit();
            // Initialize modal dialog
            // attach modal-container bootstrap attributes to links with .modal-link class.
            // when a link is clicked with these attributes, bootstrap will display the href content in a modal dialog.

            $(document).ready(function () {

                if ($.cookie('modal') == null && window.location.href.indexOf("Index") == -1) {
                    window.location.replace("/Home/Index");
                }

            });

         
        });

       
        function touPopup() {
            var myWindow = window.open("http://www.shareimagination.bg/Home/SiteTermsOfUse", "Правила за употреба", "width=400,height=400");
            //var myWindow = window.open("Home/SiteTermsOfUse", "Правила за употреба", "width=400,height=400");
        }
    </script>

    <script>
        function reqPopup() {
            var myWindow = window.open("http://www.shareimagination.bg/Home/SiteRequirements", "Технически изисквания", "width=400,height=400");
        }
    </script>

    <script>
        function contactPopup() {
            var myWindow = window.open("http://www.shareimagination.bg/Home/Contacts", "Контакти", "width=400,height=400");
        }
    </script>
</body>
</html>
